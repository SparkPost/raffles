{
  "name": "sparkpost-raffles",
  "version": "2.0.0",
  "description": "An email driven raffle application using SparkPost",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SparkPost/raffles.git"
  },
  "keywords": [
    "sparkpost",
    "email",
    "mail",
    "webhook",
    "raffle"
  ],
  "author": "SparkPost",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/SparkPost/raffles/issues"
  },
  "dependencies": {
    "@sparkpost/matchbox": "^1.4.14",
    "axios": "^0.16.2",
    "body-parser": "^1.18.1",
    "classnames": "^2.2.5",
    "express": "^4.15.4",
    "jsonwebtoken": "^8.0.1",
    "knex": "^0.13.0",
    "node-qr-image": "0.0.1",
    "objection": "^0.8.9",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.3.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.11"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "build-js": "react-scripts build",
    "start-server": "nodemon ./server/index.js",
    "start": "npm-run-all -p watch-css start-js start-server",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "migrate": "knex migrate:latest --knexfile=server/knexfile.js"
  },
  "devDependencies": {
    "node-sass-chokidar": "0.0.3",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1"
  }
}
